<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".showsMap">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></fragment>

    <RelativeLayout
        android:id="@+id/relaLayout"
        android:layout_width="401dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="#fff"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:layout_marginStart="340dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_magnify"></ImageView>

        <EditText
            android:id="@+id/input_search"
            android:layout_width="371dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/icon"
            android:layout_alignRight="@+id/icon"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:hint="Enter Location, Building, or Library"
            android:textColor="#000"
            android:textSize="15sp"
            android:imeOptions="actionSearch"></EditText>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>